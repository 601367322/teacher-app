<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyPadBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        app:cardElevation="@dimen/m5.0">

        <RelativeLayout
            android:layout_width="@dimen/m246.0"
            android:layout_height="@dimen/m104.0"
            android:background="@drawable/match_keypad_focus_background"
            android:duplicateParentState="true">

            <ImageView
                android:id="@+id/keyImage"
                android:layout_width="@dimen/m246.0"
                android:layout_height="@dimen/m104.0"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:src="@drawable/match_keypad_focus_icon" />

            <TextView
                android:id="@+id/keyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/m24.0"
                android:text="009722"
                android:textColor="#fff"
                android:textSize="@dimen/m36.0" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>