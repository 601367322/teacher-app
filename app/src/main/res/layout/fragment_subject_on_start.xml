<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subject_on_start_background">


    <com.prance.teacher.weight.SimpleProgressbar
        android:id="@+id/powerProgressbar"
        android:layout_width="@dimen/m838.0"
        android:layout_height="@dimen/m26.0"
        android:layout_marginStart="@dimen/m542.0"
        android:layout_marginTop="@dimen/m203.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <master.flame.danmaku.ui.widget.DanmakuView
        android:id="@+id/danmu"
        android:layout_width="0dp"
        android:layout_height="@dimen/m200.0"
        android:layout_marginTop="@dimen/m20.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/powerProgressbar" />

    <ImageView
        android:id="@+id/boxLight"
        android:layout_width="@dimen/m290.0"
        android:layout_height="@dimen/m290.0"
        android:visibility="gone"
        android:layout_marginStart="@dimen/m1000.0"
        android:layout_marginTop="@dimen/m60.0"
        android:src="@drawable/box_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/box"
        android:layout_width="@dimen/m290.0"
        android:layout_height="@dimen/m290.0"
        android:layout_marginStart="@dimen/m1000.0"
        android:layout_marginTop="@dimen/m60.0"
        android:src="@drawable/box_anim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>