<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyPadBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/keyPadBackground"
        android:layout_width="@dimen/m200.0"
        android:layout_height="@dimen/m80.0"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_keypad_background_offline" />

    <TextView
        android:id="@+id/keyNumber"
        android:layout_width="wrap_content"
        android:text="123123"
        android:layout_alignRight="@id/keyPadBackground"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/m5.0"
        android:textColor="#fff"
        android:textSize="@dimen/m40.0" />


</RelativeLayout>