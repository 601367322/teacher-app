<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/connect" />
    
    <RadioGroup
        android:id="@+id/rgConnType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:checkedButton="@+id/radioTcp">
        
        <RadioButton 
            android:id="@+id/rbConnTcp"
            android:text="TCP/IP" 
            android:checked="true"
            android:layout_marginLeft="10dp"/>
        <RadioButton 
            android:id="@+id/rbConnBle"
             android:layout_marginLeft="30dp"
            android:text="BLE" />
        <RadioButton 
            android:id="@+id/rbConnSerial"
             android:layout_marginLeft="30dp"
            android:text="SerialPort" />
         <RadioButton 
             android:id="@+id/rbConnUsb"
              android:layout_marginLeft="30dp"
            android:text="USB"
             />
        
    </RadioGroup>
    
    <Button 
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="Search Base Station"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal"
        >
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="IP:" />
         
        <EditText 
           android:cursorVisible="false"
           android:id="@+id/edtIP"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginRight="50dp"
           android:text="10.10.100.254" />
        
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/cbDemoMode" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo mode"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Key IDs"
            />
        
        <EditText 
            android:id="@+id/edDemoModeKeyIDs"
            android:cursorVisible="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:text="1,2,3-5"
            />
        
    </LinearLayout>
   
    
     <LinearLayout 
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal">

          <Button 
       		 	android:id="@+id/btnConnect"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"
        		
        		android:text="Connect" />
          
           <Button 
       		 	android:id="@+id/btnDisconnect"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
        		android:layout_marginLeft="20dp"
        		android:text="Disconnect" />
           
            <Button 
       		 	android:id="@+id/btnClear"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
        		android:layout_marginLeft="20dp"
        		android:text="Clear" />
           
    </LinearLayout>
    
     
    <LinearLayout 
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent" 
        android:background="#EEEEEE" 
         
        android:orientation="horizontal"> 
     
		      <ScrollView
		    android:id="@+id/scvConn"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="5dp"
		    android:scrollbars="none"
		    android:fillViewport="false">
		
		        <TextView
		            
		        android:id="@+id/txtConnLog"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:minLines="6"
		        android:layout_weight="1.0"/>
		
		    </ScrollView>
    
      
    </LinearLayout> 
     
     
	 
	 
    

</LinearLayout>
