<?xml version="1.0" encoding="utf-8"?>
<com.prance.lib.common.utils.weight.FocusRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/m820.0"
        android:layout_height="@dimen/m410.0"
        android:background="@drawable/classes_background"
        android:duplicateParentState="true"
        android:paddingLeft="@dimen/m40.0"
        android:paddingTop="@dimen/m30.0"
        android:paddingRight="@dimen/m40.0">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:shadowColor="#2F66BC"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:textColor="#fff"
            android:textSize="@dimen/m40.0"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m28.0"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:shadowColor="#2F66BC"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:textColor="#fff"
            android:textSize="@dimen/m30.0"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/secondTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m28.0"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:shadowColor="#2F66BC"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:textColor="#fff"
            android:textSize="@dimen/m28.0"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/subTitle" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m28.0"
            android:height="@dimen/m37.0"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:shadowColor="#2F66BC"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:textColor="#fff"
            android:textSize="@dimen/m24.0"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/secondTitle" />

        <TextView
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m25.0"
            android:includeFontPadding="false"
            android:shadowColor="#2F66BC"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:textColor="#fff"
            android:textSize="@dimen/m24.0"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/date" />

        <TextView
            android:id="@+id/assistantTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m58.0"
            android:includeFontPadding="false"
            android:shadowColor="#2F66BC"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:textSize="@dimen/m24.0"
            app:layout_constraintBottom_toBottomOf="@+id/teacher"
            app:layout_constraintStart_toEndOf="@+id/teacher"
            app:layout_constraintTop_toTopOf="@+id/teacher" />

        <TextView
            android:id="@+id/studentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m25.0"
            android:includeFontPadding="false"
            android:shadowColor="#2F66BC"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:textColor="#fff"
            android:textSize="@dimen/m24.0"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/teacher" />

        <TextView
            android:id="@+id/bindStudentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m58.0"
            android:includeFontPadding="false"
            android:shadowColor="#2F66BC"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:textSize="@dimen/m24.0"
            app:layout_constraintBottom_toBottomOf="@+id/studentCount"
            app:layout_constraintStart_toEndOf="@+id/studentCount"
            app:layout_constraintTop_toTopOf="@+id/studentCount" />


    </android.support.constraint.ConstraintLayout>
</com.prance.lib.common.utils.weight.FocusRelativeLayout>