<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Type of option"/>
        
        <Spinner android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spCfgOptionType"
            android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
            android:entries="@array/choice_display_modes"/>
        
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Modify mode"/>
        
        <Spinner android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spCfgModifyMode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:entries="@array/choice_modify_modes"/>
        
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Secrecy mode"/>
        
        <Spinner android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spCfgSecrecyMode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:entries="@array/choice_secrecy_modes"/>
        
    </LinearLayout>
    
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Forced submission mode"/>
        
        <Spinner android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spCfgSubmissionMode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:entries="@array/choice_submission_modes"/>
        
    </LinearLayout>
    
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Option numbers"/>
        
        <Spinner android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spCfgOptionNum"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:entries="@array/choice_option_numbers"/>
        
    </LinearLayout>
    
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Selectable numbers"/>
        
        <Spinner android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spCfgSelectNum"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:entries="@array/choice_option_numbers"/>
        
    </LinearLayout>
    
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Right Answer"/>
        
        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtRightAnswer"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
             />
        
    </LinearLayout>
    
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="OK"
        android:id="@+id/btnCfgChoiceOK"></Button>
    

</LinearLayout>
